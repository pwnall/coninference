<h2>Experiments</h2>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.label %></td>
        <td><%= event.started_at %></td>
        <td><%= event.ended_at %></td>
        <td><%= link_to 'Data', event_device_list_path(event) %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td>
          <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
